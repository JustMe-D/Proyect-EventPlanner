@page "{id:int}"
@model Proyect_EventPlanner.Pages.Resources.EditModel
@{
    ViewData["Title"] = "Editar Recurso";
}

<h1>Editar Recurso</h1>

<h4>Resource</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Resource.IdResource" />

            <div class="form-group">
                <label asp-for="Resource.ResourceName" class="control-label"></label>
                <input asp-for="Resource.ResourceName" class="form-control" />
                <span asp-validation-for="Resource.ResourceName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resource.Quantity" class="control-label"></label>
                <input asp-for="Resource.Quantity" class="form-control" />
                <span asp-validation-for="Resource.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resource.Description" class="control-label"></label>
                <input asp-for="Resource.Description" class="form-control" />
                <span asp-validation-for="Resource.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resource.IdEvent" class="control-label"></label>
                <select asp-for="Resource.IdEvent" class="form-control" asp-items="Model.EventOptions">
                    <option value="">Seleccione un evento</option>
                </select>
                <span asp-validation-for="Resource.IdEvent" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
            <a asp-page="Index" class="btn btn-secondary mt-3">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
