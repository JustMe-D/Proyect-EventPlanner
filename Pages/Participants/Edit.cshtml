@page
@model Proyect_EventPlanner.Pages.Participants.EditModel
@{
	ViewData["Title"] = "Edit Participant";
}

<h1>Edit</h1>

<h4>Participant</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Participant.IdParticipant" />
			<div class="form.group">
				<label asp-for="Participant.Name" class="control-label"></label>
				<input asp-for="Participant.Name" class="form-control" />
				<span asp-validation-for="Participant.Name" class="text-danger"></span>
			</div>

			<div class="form.group">
				<label asp-for="Participant.LastName" class="control-label"></label>
				<input asp-for="Participant.LastName" class="form-control" />
				<span asp-validation-for="Participant.LastName" class="text-danger"></span>
			</div>

			<div class="form.group">
				<label asp-for="Participant.Email" class="control-label"></label>
				<input asp-for="Participant.Email" class="form-control" />
				<span asp-validation-for="Participant.Email" class="text-danger"></span>
			</div>

			<div class="form.group">
				<label asp-for="Participant.Phone" class="control-label"></label>
				<input asp-for="Participant.Phone" class="form-control" />
				<span asp-validation-for="Participant.Phone" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-page="Index" class="btn btn-primary">Back To List></a>
			</div>

		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
