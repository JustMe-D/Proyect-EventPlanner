@page "{id:int}"
@model Proyect_EventPlanner.Pages.Locations.DeleteModel
@{
    ViewData["Title"] = "Delete Location";
}

<h1>Delete Location</h1>
<h4>Are you sure you want to delete this location?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Location.IdLocation</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Location.LocationName</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Location.Capacity</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Location.Address</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Location.IdLocation" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
